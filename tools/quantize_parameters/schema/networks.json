{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "layer": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "type": {
                    "type": "string"
                }
            },
            "required": ["name", "type"]
        },
        "input": {
            "type": "object",
            "properties": {
                "min": {
                    "type": "number"
                },
                "max": {
                    "type": "number"
                }
            },
            "required": ["min", "max"]
        }
    },
    "type": "object",
    "properties": {
        "name": { "type": "string" },
        "input": { "$ref": "#/definitions/input" },
        "layers": {
            "type": "array",
            "items": { "$ref": "#/definitions/layer" },
            "default": []
        }
    },
    "required": ["name", "input", "layers"]
}